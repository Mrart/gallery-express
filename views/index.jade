doctype 5
html
    head
        meta(charset='utf-8')
        title= 'KISSY-Gallery'
        link(rel='stylesheet', href='/stylesheets/index.css')
    body
        #page
            #header
                .logo
            #main
                .guide
                    .bd
                        a.guide-link.animated.dev(href="http://gallery.kissyui.com/quickstart")
                            em 15分钟开发kissy组件
                        a.guide-link.animated.spec(href="http://gallery.kissyui.com/guide"
                            target="_blank")
                            em gallery组件规范说明
                        a.guide-link.animated.tool(href="#")
                            em abc工具使用指南
                    .ft
                        a#J_Source.source.animated(href="https://github.com/kissygalleryteam")  source on github
                .contribute
                    .hd
                        p.title 贡献者
                    .bd
                        ul.author-list.right-col
                            each item in authors
                                li.author
                                    a(href="#{item.page}"
                                        target="_blank")
                                        img(src="http://0.gravatar.com/avatar/#{item.md5}?s=70"
                                            title="#{item.name}"
                                            alt="#{item.name}")
                                    .author-info.animated
                                        p.author-name #{item.name}
                                        p.author-email #{item.email}

                .component
                    ul.component-list
                        each item in components
                            if item.cover
                                li.has-cover.item
                                    .wrap
                                        a.item-link(href="/#{item.name}/#{item.version}/guide/index.html"
                                        title="#{item.name}"
                                        target="_blank")
                                            img.cover(src="#{item.cover}")

                                        .detail-link-wrap
                                            a.item-link.item-detail(href="/#{item.name}/#{item.version}/guide/index.html"
                                            title="#{item.name}"
                                            target="_blank")
                                                strong.name.l-block #{item.name}
                                                span.author.l-block #{item.author.name}
                                                    img.avatar(src="http://0.gravatar.com/avatar/#{item.author.md5}?s=30")
                                                span.desc.l-block #{item.desc}
                                                iframe.github-star(allowtransparency="true"
                                                frameborder="0"
                                                scrolling="0"
                                                width="170"
                                                height="30"
                                                src="http://ghbtns.com/github-btn.html?user=kissygalleryteam&repo=#{item.name}&type=watch&count=true&size=large")

                                            a.demo-link(href="/#{item.name}/#{item.version}/demo/index.html"
                                            target="_blank") demo
                            else
                                li.item
                                    .detail-link-wrap
                                        a.item-link.item-detail(href="/#{item.name}/#{item.version}/guide/index.html"
                                        title="#{item.name}"
                                        target="_blank")
                                            strong.name.l-block #{item.name}
                                            span.author.l-block #{item.author.name}
                                                img.avatar(src="http://0.gravatar.com/avatar/#{item.author.md5}?s=30")
                                            span.desc.l-block #{item.desc}
                                            iframe.github-star(allowtransparency="true"
                                                frameborder="0"
                                                scrolling="0"
                                                width="130"
                                                height="30"
                                                src="http://ghbtns.com/github-btn.html?user=kissygalleryteam&repo=#{item.name}&type=watch&count=true&size=large")

                                        a.demo-link(href="/#{item.name}/#{item.version}/demo/index.html"
                                        target="_blank") demo

            #footer
                .contact
                    ul
                        li.item
                            p.title 开发者旺旺群
                            p.desc  600859238
                        li.item
                            p.title 邮箱
                            p.desc kissyteam@gmail.com
                        li.item
                            p.title 讨论组
                            p.desc
                                a(href="http://groups.google.com/group/kissy-ui/"
                                target="_blank") kissy-ui
                        li.item
                            p.title &nbsp;
                            p.desc
                                a(href="http://docs.kissyui.com/"
                                target="_blank") Kissy首页
                .index-author
                   p.author-name.l-right 设计：亚城 / 剑平 &nbsp;&nbsp;&nbsp;&nbsp;开发：踏风 / 自寒 / 伯方

        script
            setTimeout(
                function(){
                  document.getElementById('J_Source').classList.add('bounce')
                }, 800)