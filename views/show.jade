extends layout

block content
	div.color-line
		i.one
		i.two
		i.three
	div.container-fluid
		div.row-fluid
			div.span3.bs-docs-sidebar
				h1= '导航'
				ul.nav.nav-list.bs-docs-sidenav(data-spy='affix', data-offset-top='0')
				a.nav-toggle.J_Toggle(href='javascript:void(0);')
			div.bs-docs-sidebar-mini
				a.nav-toggle.J_Toggle(href='javascript:void(0);')
			div.span9.bs-docs-content
				div.link
					a.source(href='javascript:void(0);', target='_blank')= '组件源码'
					a.home(href='http://gallery.kissyui.com', target='_blank')= 'Kissy Gallery'
				h1.title= title
				iframe.github-star(allowtransparency='true', frameborder='0', scrolling='0', width='170px', height='30px')
				hr.title-hr
				!{blogContent}
				h2= 'issues'
				div.GithubEmbed
					div.github-widget
					a.btn.btn-priamry(target='_blank')= '向作者提问'